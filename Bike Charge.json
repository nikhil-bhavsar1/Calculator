
import React, { useState } from 'react';
import { Battery, Zap, MapPin, Users, Thermometer, AlertTriangle } from 'lucide-react';

const EBikeCalculator = () => {
  const [bikeWeight, setBikeWeight] = useState(96);
  const [rider1Weight, setRider1Weight] = useState(71);
  const [rider2Weight, setRider2Weight] = useState(0);
  const [miscWeight, setMiscWeight] = useState(2);
  const [distance, setDistance] = useState(22);
  const [speed, setSpeed] = useState(40);
  const [batteryVoltage, setBatteryVoltage] = useState(50.4);
  const [batteryAh, setBatteryAh] = useState(38);
  const [temperature, setTemperature] = useState(27);
  const [terrain, setTerrain] = useState('flat');
  const [traffic, setTraffic] = useState('heavy');

  const calculateConsumption = () => {
    const totalWeight = bikeWeight + rider1Weight + rider2Weight + miscWeight;
    const speedMs = speed / 3.6;
    
    // Rolling resistance
    const crr = 0.008;
    const rollingForce = crr * totalWeight * 9.81;
    
    // Air resistance - adjust frontal area based on riders
    const cd = 0.9;
    const frontalArea = rider2Weight > 0 ? 0.65 : 0.6;
    const airDensity = temperature > 25 ? 1.18 : 1.20;
    const dragForce = 0.5 * cd * frontalArea * airDensity * speedMs * speedMs;
    
    // Base power at wheel
    const totalForce = rollingForce + dragForce;
    const powerAtWheel = totalForce * speedMs;
    const motorPower = powerAtWheel / 0.75; // 75% efficiency
    
    // Terrain adjustments
    let terrainMultiplier = 1.0;
    let terrainDescription = '';
    
    switch(terrain) {
      case 'flat':
        terrainMultiplier = 1.0;
        terrainDescription = 'Flat roads, minimal elevation';
        break;
      case 'light_flyover':
        terrainMultiplier = 1.2;
        terrainDescription = 'Few flyovers (2-3% gradient)';
        break;
      case 'weh':
        terrainMultiplier = 1.35;
        terrainDescription = 'Western Express Highway (multiple flyovers)';
        break;
      case 'steep':
        terrainMultiplier = 1.6;
        terrainDescription = 'Steep slopes (5-7% gradient)';
        break;
      case 'extreme':
        terrainMultiplier = 2.3;
        terrainDescription = 'Jogeshwari-Phoenix type (steep + traffic on slopes)';
        break;
    }
    
    // Traffic adjustments
    let trafficMultiplier = 1.0;
    let trafficDescription = '';
    
    switch(traffic) {
      case 'no':
        trafficMultiplier = 1.0;
        trafficDescription = 'Free flowing, constant speed';
        break;
      case 'light':
        trafficMultiplier = 1.15;
        trafficDescription = 'Occasional stops';
        break;
      case 'moderate':
        trafficMultiplier = 1.25;
        trafficDescription = 'Regular stops at signals';
        break;
      case 'heavy':
        trafficMultiplier = 1.4;
        trafficDescription = 'Stop-and-go, frequent acceleration';
        break;
      case 'extreme':
        trafficMultiplier = 1.6;
        trafficDescription = 'Crawling traffic, stops on slopes';
        break;
    }
    
    // Calculate consumption
    const effectivePower = motorPower * terrainMultiplier * trafficMultiplier;
    const currentDraw = effectivePower / batteryVoltage;
    const timeHours = distance / speed;
    const ahConsumed = currentDraw * timeHours;
    const whConsumed = effectivePower * timeHours;
    const batteryPercent = (ahConsumed / batteryAh) * 100;
    const whPerKm = whConsumed / distance;
    const fullRange = (batteryAh * batteryVoltage) / whPerKm;
    const tripsPerCharge = batteryAh / ahConsumed;
    
    return {
      totalWeight,
      motorPower: effectivePower,
      currentDraw,
      ahConsumed,
      whConsumed,
      batteryPercent,
      whPerKm,
      fullRange,
      tripsPerCharge,
      timeMinutes: timeHours * 60,
      terrainDescription,
      trafficDescription
    };
  };

  const results = calculateConsumption();
  
  const getRiskLevel = (percent) => {
    if (percent < 40) return { color: 'text-green-600', bg: 'bg-green-100', label: 'Safe âœ“' };
    if (percent < 60) return { color: 'text-yellow-600', bg: 'bg-yellow-100', label: 'Moderate âš ' };
    if (percent < 80) return { color: 'text-orange-600', bg: 'bg-orange-100', label: 'High Risk âš ' };
    return { color: 'text-red-600', bg: 'bg-red-100', label: 'Critical âš âš ' };
  };

  const risk = getRiskLevel(results.batteryPercent);

  return (
    <div className="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100 p-4">
      <div className="max-w-6xl mx-auto">
        <div className="bg-white rounded-2xl shadow-2xl overflow-hidden">
          {/* Header */}
          <div className="bg-gradient-to-r from-blue-600 to-indigo-600 p-6 text-white">
            <div className="flex items-center gap-3 mb-2">
              <Zap className="w-8 h-8" />
              <h1 className="text-3xl font-bold">E-Bike Power Calculator</h1>
            </div>
            <p className="text-blue-100">Calculate battery consumption for your Mumbai routes</p>
          </div>

          <div className="grid md:grid-cols-2 gap-6 p-6">
            {/* Left Column - Inputs */}
            <div className="space-y-6">
              {/* Weight Section */}
              <div className="bg-gray-50 rounded-xl p-4">
                <div className="flex items-center gap-2 mb-4">
                  <Users className="w-5 h-5 text-blue-600" />
                  <h2 className="text-lg font-semibold text-gray-800">Weight Configuration</h2>
                </div>
                
                <div className="space-y-3">
                  <div>
                    <label className="text-sm font-medium text-gray-700">Bike Weight (kg)</label>
                    <input
                      type="number"
                      value={bikeWeight}
                      onChange={(e) => setBikeWeight(Number(e.target.value))}
                      className="w-full mt-1 px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                    />
                  </div>
                  
                  <div>
                    <label className="text-sm font-medium text-gray-700">Rider 1 Weight (kg)</label>
                    <input
                      type="number"
                      value={rider1Weight}
                      onChange={(e) => setRider1Weight(Number(e.target.value))}
                      className="w-full mt-1 px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                    />
                  </div>
                  
                  <div>
                    <label className="text-sm font-medium text-gray-700">Rider 2 Weight (kg) - 0 for solo</label>
                    <input
                      type="number"
                      value={rider2Weight}
                      onChange={(e) => setRider2Weight(Number(e.target.value))}
                      className="w-full mt-1 px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                    />
                  </div>
                  
                  <div>
                    <label className="text-sm font-medium text-gray-700">Misc Weight (bags, etc.) kg</label>
                    <input
                      type="number"
                      value={miscWeight}
                      onChange={(e) => setMiscWeight(Number(e.target.value))}
                      className="w-full mt-1 px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                    />
                  </div>
                  
                  <div className="bg-blue-50 p-3 rounded-lg">
                    <p className="text-sm font-semibold text-blue-900">Total Weight: {results.totalWeight} kg</p>
                  </div>
                </div>
              </div>

              {/* Route Section */}
              <div className="bg-gray-50 rounded-xl p-4">
                <div className="flex items-center gap-2 mb-4">
                  <MapPin className="w-5 h-5 text-blue-600" />
                  <h2 className="text-lg font-semibold text-gray-800">Route Details</h2>
                </div>
                
                <div className="space-y-3">
                  <div>
                    <label className="text-sm font-medium text-gray-700">Distance (km)</label>
                    <input
                      type="number"
                      value={distance}
                      onChange={(e) => setDistance(Number(e.target.value))}
                      className="w-full mt-1 px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                    />
                  </div>
                  
                  <div>
                    <label className="text-sm font-medium text-gray-700">Average Speed (km/h)</label>
                    <input
                      type="number"
                      value={speed}
                      onChange={(e) => setSpeed(Number(e.target.value))}
                      className="w-full mt-1 px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                    />
                  </div>
                  
                  <div>
                    <label className="text-sm font-medium text-gray-700">Terrain Type</label>
                    <select
                      value={terrain}
                      onChange={(e) => setTerrain(e.target.value)}
                      className="w-full mt-1 px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                    >
                      <option value="flat">Flat Road</option>
                      <option value="light_flyover">Light Flyovers (SV Road)</option>
                      <option value="weh">Western Express Highway</option>
                      <option value="steep">Steep Slopes (BKC Approach)</option>
                      <option value="extreme">Extreme (Jogeshwari-Phoenix)</option>
                    </select>
                    <p className="text-xs text-gray-500 mt-1">{results.terrainDescription}</p>
                  </div>
                  
                  <div>
                    <label className="text-sm font-medium text-gray-700">Traffic Conditions</label>
                    <select
                      value={traffic}
                      onChange={(e) => setTraffic(e.target.value)}
                      className="w-full mt-1 px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                    >
                      <option value="no">No Traffic</option>
                      <option value="light">Light Traffic</option>
                      <option value="moderate">Moderate Traffic</option>
                      <option value="heavy">Heavy Traffic</option>
                      <option value="extreme">Extreme (Stops on Slopes)</option>
                    </select>
                    <p className="text-xs text-gray-500 mt-1">{results.trafficDescription}</p>
                  </div>
                </div>
              </div>

              {/* Battery & Environment Section */}
              <div className="bg-gray-50 rounded-xl p-4">
                <div className="flex items-center gap-2 mb-4">
                  <Battery className="w-5 h-5 text-blue-600" />
                  <h2 className="text-lg font-semibold text-gray-800">Battery & Environment</h2>
                </div>
                
                <div className="space-y-3">
                  <div>
                    <label className="text-sm font-medium text-gray-700">Battery Voltage (V)</label>
                    <input
                      type="number"
                      step="0.1"
                      value={batteryVoltage}
                      onChange={(e) => setBatteryVoltage(Number(e.target.value))}
                      className="w-full mt-1 px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                    />
                  </div>
                  
                  <div>
                    <label className="text-sm font-medium text-gray-700">Battery Capacity (Ah)</label>
                    <input
                      type="number"
                      value={batteryAh}
                      onChange={(e) => setBatteryAh(Number(e.target.value))}
                      className="w-full mt-1 px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                    />
                  </div>
                  
                  <div>
                    <label className="text-sm font-medium text-gray-700 flex items-center gap-2">
                      <Thermometer className="w-4 h-4" />
                      Temperature (Â°C)
                    </label>
                    <input
                      type="number"
                      value={temperature}
                      onChange={(e) => setTemperature(Number(e.target.value))}
                      className="w-full mt-1 px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                    />
                  </div>
                  
                  <div className="bg-indigo-50 p-3 rounded-lg">
                    <p className="text-sm font-semibold text-indigo-900">
                      Total Capacity: {(batteryVoltage * batteryAh).toFixed(0)} Wh
                    </p>
                  </div>
                </div>
              </div>
            </div>

            {/* Right Column - Results */}
            <div className="space-y-6">
              {/* Battery Usage Card */}
              <div className={`${risk.bg} rounded-xl p-6 border-2 ${risk.color.replace('text', 'border')}`}>
                <div className="flex items-center justify-between mb-4">
                  <h2 className="text-xl font-bold text-gray-800">Battery Usage</h2>
                  <span className={`${risk.color} font-bold text-lg`}>{risk.label}</span>
                </div>
                
                <div className="mb-4">
                  <div className="flex justify-between items-center mb-2">
                    <span className="text-sm font-medium text-gray-700">Battery Consumption</span>
                    <span className={`text-2xl font-bold ${risk.color}`}>
                      {results.batteryPercent.toFixed(1)}%
                    </span>
                  </div>
                  <div className="w-full bg-gray-200 rounded-full h-4 overflow-hidden">
                    <div
                      className={`h-4 rounded-full transition-all duration-500 ${
                        results.batteryPercent < 40 ? 'bg-green-500' :
                        results.batteryPercent < 60 ? 'bg-yellow-500' :
                        results.batteryPercent < 80 ? 'bg-orange-500' : 'bg-red-500'
                      }`}
                      style={{ width: `${Math.min(results.batteryPercent, 100)}%` }}
                    />
                  </div>
                </div>

                <div className="grid grid-cols-2 gap-4">
                  <div className="bg-white bg-opacity-50 rounded-lg p-3">
                    <p className="text-xs text-gray-600 mb-1">Ah Consumed</p>
                    <p className="text-xl font-bold text-gray-800">{results.ahConsumed.toFixed(2)}</p>
                  </div>
                  <div className="bg-white bg-opacity-50 rounded-lg p-3">
                    <p className="text-xs text-gray-600 mb-1">Energy Used</p>
                    <p className="text-xl font-bold text-gray-800">{results.whConsumed.toFixed(0)} Wh</p>
                  </div>
                </div>
              </div>

              {/* Performance Metrics */}
              <div className="bg-gradient-to-br from-blue-50 to-indigo-50 rounded-xl p-6 border border-blue-200">
                <h2 className="text-xl font-bold text-gray-800 mb-4">Performance Metrics</h2>
                
                <div className="space-y-3">
                  <div className="flex justify-between items-center p-3 bg-white rounded-lg">
                    <span className="text-sm font-medium text-gray-700">Motor Power</span>
                    <span className="text-lg font-bold text-blue-600">{results.motorPower.toFixed(0)} W</span>
                  </div>
                  
                  <div className="flex justify-between items-center p-3 bg-white rounded-lg">
                    <span className="text-sm font-medium text-gray-700">Current Draw</span>
                    <span className="text-lg font-bold text-blue-600">{results.currentDraw.toFixed(1)} A</span>
                  </div>
                  
                  <div className="flex justify-between items-center p-3 bg-white rounded-lg">
                    <span className="text-sm font-medium text-gray-700">Consumption Rate</span>
                    <span className="text-lg font-bold text-blue-600">{results.whPerKm.toFixed(1)} Wh/km</span>
                  </div>
                  
                  <div className="flex justify-between items-center p-3 bg-white rounded-lg">
                    <span className="text-sm font-medium text-gray-700">Journey Time</span>
                    <span className="text-lg font-bold text-blue-600">{results.timeMinutes.toFixed(0)} min</span>
                  </div>
                </div>
              </div>

              {/* Range Information */}
              <div className="bg-gradient-to-br from-green-50 to-emerald-50 rounded-xl p-6 border border-green-200">
                <h2 className="text-xl font-bold text-gray-800 mb-4">Range Information</h2>
                
                <div className="space-y-3">
                  <div className="flex justify-between items-center p-3 bg-white rounded-lg">
                    <span className="text-sm font-medium text-gray-700">Full Battery Range</span>
                    <span className="text-lg font-bold text-green-600">{results.fullRange.toFixed(1)} km</span>
                  </div>
                  
                  <div className="flex justify-between items-center p-3 bg-white rounded-lg">
                    <span className="text-sm font-medium text-gray-700">Trips per Charge</span>
                    <span className="text-lg font-bold text-green-600">{results.tripsPerCharge.toFixed(1)} trips</span>
                  </div>
                  
                  <div className="flex justify-between items-center p-3 bg-white rounded-lg">
                    <span className="text-sm font-medium text-gray-700">Remaining After Trip</span>
                    <span className="text-lg font-bold text-green-600">
                      {(100 - results.batteryPercent).toFixed(1)}%
                    </span>
                  </div>
                </div>
              </div>

              {/* Recommendations */}
              <div className="bg-gradient-to-br from-purple-50 to-pink-50 rounded-xl p-6 border border-purple-200">
                <div className="flex items-center gap-2 mb-4">
                  <AlertTriangle className="w-5 h-5 text-purple-600" />
                  <h2 className="text-xl font-bold text-gray-800">Recommendations</h2>
                </div>
                
                <div className="space-y-2 text-sm text-gray-700">
                  {results.batteryPercent < 40 && (
                    <p className="p-2 bg-green-100 rounded">âœ“ Excellent range! Safe for daily commute.</p>
                  )}
                  {results.batteryPercent >= 40 && results.batteryPercent < 60 && (
                    <p className="p-2 bg-yellow-100 rounded">âš  Moderate usage. Charge every 2-3 days.</p>
                  )}
                  {results.batteryPercent >= 60 && results.batteryPercent < 80 && (
                    <>
                      <p className="p-2 bg-orange-100 rounded">âš  High consumption. Charge daily recommended.</p>
                      <p className="p-2 bg-orange-100 rounded">â€¢ Consider reducing speed or weight</p>
                    </>
                  )}
                  {results.batteryPercent >= 80 && (
                    <>
                      <p className="p-2 bg-red-100 rounded">âš âš  Critical! Very limited range.</p>
                      <p className="p-2 bg-red-100 rounded">â€¢ Must charge to 100% before trip</p>
                      <p className="p-2 bg-red-100 rounded">â€¢ Consider alternative route</p>
                      <p className="p-2 bg-red-100 rounded">â€¢ Reduce speed or remove pillion</p>
                      {results.batteryPercent >= 85 && (
                        <p className="p-2 bg-red-100 rounded font-bold">â€¢ Risk of getting stranded!</p>
                      )}
                    </>
                  )}
                  
                  {results.tripsPerCharge < 2 && (
                    <p className="p-2 bg-blue-100 rounded">ðŸ’¡ Consider battery upgrade for this route</p>
                  )}
                </div>
              </div>
            </div>
          </div>
        </div>

        {/* Footer */}
        <div className="text-center mt-6 text-gray-600 text-sm">
          <p>Mumbai E-Bike Calculator â€¢ Calculations based on real-world Mumbai traffic conditions</p>
        </div>
      </div>
    </div>
  );
};

export default EBikeCalculator;

